@{
    ViewData["Title"] = "Inicio";
    var nombre = Context.Session.GetString("Nombre");
    var rol = Context.Session.GetString("Rol");
}

<h1 class="mb-4">Competencia de Programación U Fidélitas</h1>

@if (!string.IsNullOrEmpty(nombre))
{
    <div class="alert alert-success">
        Bienvenido, <strong>@nombre</strong> (@rol).
        <a class="btn btn-sm btn-outline-light ms-2" asp-controller="Cuenta" asp-action="Logout">
            Cerrar sesión
        </a>
    </div>
}
else
{
    <div class="alert alert-info">
        No has iniciado sesión.
        <a class="btn btn-sm btn-primary ms-2" asp-controller="Cuenta" asp-action="Login">
            Iniciar sesión
        </a>
    </div>
}

<div class="mt-4">
    <p>
        Esta aplicación permite a los estudiantes de Sistemas del Campus San Pedro registrarse
        para la competencia de programación, y a los administradores gestionar las solicitudes.
    </p>

    <a class="btn btn-primary me-2" asp-controller="Cuenta" asp-action="Registro">
        Registrarme a la competencia
    </a>

    <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Index">
        Ir al panel de administración
    </a>
</div>
